<nav class="navbar navbar-light bg-faded">
  <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2">
    &#9776;
  </button>
  <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
    <a class="navbar-brand" href="{{ path('index') }}">MiTienda</a>
    <ul class="nav navbar-nav">
    {% for item in navbar %}

        {# NO SUBCATEGORIES #}
	{% if item.__children is empty %}

	  <li class="nav-item nav-link">

            {# ITEM NAME #}
	    <a href="{{ path('product_list', {'categoryProduct': (item.slug) }) }}">
	    {{ item.name | upper }}
	    </a>

	  </li>

	{% else %}

	  <li class="nav-item active dropdown">

           {# ITEM NAME #}
	    <a class="nav-link dropdown-toggle" href="{{ path('product_list', {'categoryProduct': (item.slug)} ) }}">{{ item.name | upper }}</a>

           {# DROPDOWN #}
	    <ul class="dropdown-menu">
	      {% for subitem in item.__children %}
	      <li>
		<a class="dropdown-item" href="{{ path('product_list', {categoryProduct: subitem.slug}) }}" >
		{{ subitem.name }}
		</a>
	      </li>
	      {% endfor %}
	    </ul>

	  </li>

	{% endif %}

    {% endfor %}
    </ul>
  </div>
